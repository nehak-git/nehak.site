---
import Layout from "../layouts/Layout.astro";
import ProjectList from "../components/react/project-list";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<Layout title="Projects | Neha Kumari">
  <div class="flex flex-col gap-10 py-20">
    <div>
      <h1 class="text-4xl font-medium text-stone-800 font-display">
        Projects
      </h1>
      <p class="text-stone-600 mt-2">
        Here are some of the projects I've worked on.
      </p>
    </div>
    <ProjectList client:load projects={projects} />
  </div>
</Layout>
