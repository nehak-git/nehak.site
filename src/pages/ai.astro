---
import Layout from "../layouts/Layout.astro";
import AIChat from "../components/react/ai-chat";
import { BsStars } from "react-icons/bs";
---

<Layout title="nehak://ai">
  <div class="flex flex-col gap-6">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-display tracking-tight text-stone-800">
        nehak://ai
      </h1>
      <div
        class="rounded-full bg-emerald-100 px-2.5 py-1.5 text-xs font-medium text-emerald-700 flex items-center gap-1"
      >
        <BsStars className="text-emerald-700" />
        <span>just for fun!</span>
      </div>
    </div>

    <h2 class="text-stone-600 font-medium tracking-tight">
      have a chat with my AI to know more about me!
    </h2>
    <section class="pt-4">
      <AIChat client:load />
    </section>
  </div>
</Layout>
